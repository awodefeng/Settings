<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/storage_title_usb">

    <PreferenceCategory
            android:title="@string/usb_connection_category" />
	    <CheckBoxPreference
	        android:key="usb_storage"
	        android:title="@string/usb_storage"
	        android:summary="@string/usb_storage_summary"
	        android:persistent="false"
	        />
	    
	    <CheckBoxPreference
	        android:key="usb_tether_settings"
	        android:title="@string/usb_tethering_button_text"
	        android:persistent="false"/>
	
	    <CheckBoxPreference
	        android:key="usb_mtp"
	        android:title="@string/usb_mtp_title"
	        android:summary="@string/usb_mtp_summary"
	        android:persistent="false"
	        />
	
	    <CheckBoxPreference
	        android:key="usb_ptp"
	        android:title="@string/usb_ptp_title"
	        android:summary="@string/usb_ptp_summary"
	        android:persistent="false"
	        />
	
	    <CheckBoxPreference
	        android:key="usb_charge_only"
	        android:title="@string/usb_charge_only"
	        android:summary="@string/usb_charge_only_summary"
	        android:persistent="false"
	        />

	    <CheckBoxPreference
	        android:key="usb_virtual_drive"
	        android:title="@string/usb_virtual_drive"
	        android:summary="@string/usb_virtual_drive_summary"
	        android:persistent="false"
	        />
	
	    <CheckBoxPreference
	        android:key="remember_choice"
	        android:title="@string/remember_choice"
	        android:summary="@string/remember_choice_summary"/>

</PreferenceScreen>
